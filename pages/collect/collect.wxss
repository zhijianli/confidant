.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0  0;
  box-sizing: border-box;
}  
.profile-tab {
    width: 100%;
    display: flex;
    justify-content: space-around;
    line-height: 88rpx;
    border-bottom: 1px solid #eee;
    background-color: #fff;
}

.profile-tab .btn {
    color: #666;
    font-size: 30rpx;
}

.profile-tab .selected {
    position: relative;
}
.profile-tab .noSelected {
    /* color: #828282; */
   color: #20B2AA;
}

.profile-tab .selected::after {
    content: "";
    width: 120%;
    height: 2px;
    position: absolute;
    left: 50%;
    bottom: 0;
    background-color: currentcolor;
    transform: translateX(-50%);
}

.testing-list {
    margin-top: 24rpx;
    background-color: #fff;
    padding-left: 30rpx;
    width: 96%;
}

.testing-count {
    display: flex;
    line-height: 42rpx;
}


.testing-item {
    padding: 42rpx 30rpx 32rpx 0rpx;
     border-bottom: 1px solid #eee; 
        box-shadow:  10rpx 10rpx  10rpx 10rpx #FAFAFA; 
     border-radius: 7px; 
}

.testing-item:last-child {
    border-bottom: none;
}

.testing-info-wrapper {
    display: flex;
    justify-content: space-between;
    margin-bottom: 20rpx;

}

.testing-info-wrapper image {
    width: 200rpx;
    height: 200rpx;
    margin-left: 60rpx;
    border-radius: 8px;
    object-fit: cover;
}

.testing-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.testing-info view:first-child {
     color: #7A7A7A;
    font-size: 28rpx; 
}

.testing-info view:last-child {
     /* color: #7A7A7A;
    font-size: 26rpx;  */
        color: #bfbfbf;
    font-size: 24rpx;
    line-height: 40rpx;
    word-break: break-all;
}

.line-overflow {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    /* -webkit-line-clamp: 2; */
    overflow: hidden;
        
}

