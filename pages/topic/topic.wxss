

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0  0;
  box-sizing: border-box;
}  

.topic {
    width: 750rpx;
    margin: 0 auto;
}
.progress-number{
  text-align: center;
  margin-top: 56rpx;
  font-size: 40rpx;
}
.progress-bar-back{
    height: 15rpx;
    margin-top: 28rpx;
    margin-left: 10%;
    background-color: #D8D8D8;
    border-radius: 7px; 
}

.progress-bar {
   position:absolute;
    height: 15rpx;
    margin-top: -14rpx;
    margin-left: 10%; 
    opacity:1;
    transition: all 0.3s;
    border-radius: 7px; 
}

.topic-title {
    width: 100%;
    margin: 48rpx auto 30rpx;
    background-color: #fff;
}

.topic-title .p {
    padding: 30rpx 40rpx;
    color: #4A4A4A;
    font-size: 30rpx;
}

.topic-title .i {
    display: inline-block;
    margin-right: 10rpx;
    color: #a5a5a5;
    font-size: 24rpx;
}

.topic-title .span {
    display: inline-block;
    line-height: 1.5;
}

.topic-title image {
    width: 100%;
    height: 422rpx;
}

.topic-list {
    width: 94%;
    padding: 0 24rpx;
    background-color: #fff;
        color: #4A4A4A;
}

.topic-list .li {
    padding: 32rpx 20rpx;
    font-size: 28rpx;
    line-height: 1.5;
    border-bottom: 1px solid #ddd;
}


.topic-list .li:last-child {
    border-bottom: none;
}

.topic-list image {
    width: 100%;
    height: 368rpx;
    margin: 32rpx auto 0;
}

.topic .btn-wrapper {
    margin: 50rpx 70rpx;
    display: flex;
    justify-content: space-between;
}

.submit-btn {
    flex: 1;
    font-size: 40rpx;
    border-radius: 3px;
    line-height: 100rpx;
    color: #FFFFFF;
    margin-bottom: 40rpx;
    border: 1px solid rgba(0, 195, 204, 0.2);
    text-align: center;
}

.pre-btn {
    flex: 1;
    font-size: 40rpx;
    border-radius: 3px;
    line-height: 100rpx;
    background-color: #D8D8D8;
    margin-right: 40rpx;
    text-align:center;
     height: 100rpx;
    margin-bottom: 40rpx;
    border: 1px solid rgba(0, 195, 204, 0.2);
}

.btn-wrapper .btn {
    width: 320rpx;
    margin-bottom: 40rpx;
    color: #00d3dd;
    font-size: 28rpx;
    line-height: 80rpx;
    border: 1px solid rgba(0, 195, 204, 0.2);
    border-radius: 8rpx;
    text-align: center;
}

.profile {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    color: #a5a5a5;
    text-align: center;
    font-size: 24rpx;
    background-color: #f5f5f5;
}

.profile  .warning {
    margin: 30rpx 0 20rpx;
    font-size: 28rpx;
}

.profile .modal {
    color: #333;
}

.profile-list {
    width: 650rpx;
     margin-left:40rpx; 
    padding-left: 30rpx;
    margin-top: 30rpx;
    background-color: #fff;
          box-shadow:  2rpx 2rpx  2rpx 2rpx #dbdbdb; 
         /* border-bottom: 1px solid #eee;  */
}

.profile-list .sex {
    display: flex;
    position: relative;
    line-height: 100rpx;
    color: #333;
    font-size: 32rpx;
    border-bottom: 1px solid #eee;
    align-items: center;
}

.profile-list .sex::after {
    content: "";
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    top: 50%;
    right: 30rpx;
    border-top: 1px solid #999;
    border-right: 1px solid #999;
    transform: translateY(-50%) rotate(45deg);
}

/* .profile-list .sex:last-child::after {
    display: none;
} */

.profile-list .select {
    margin-left: 52rpx;
    font-size: 30rpx;
}

.profile-list .no-selected {
    color: #a5a5a5;
}

.profile-list input {
    flex: 1;
    width: 100%;
    margin-left: 52rpx;
    font-size: 30rpx;
    border: none;
    text-align: left;
}

.profile-list .placeholder {
    color: #a5a5a5;
}

.view-btn {
    width: 750rpx;
    position: fixed;
    left: 50%;
    bottom: 0;
    font-size: 40rpx;
    line-height: 100rpx;
    /* background: linear-gradient(to right, #00c3cc, #05d0ca); */
    transform: translateX(-50%);
    color: #FFFFFF;
}

.btn {
    color: #fff;
    text-align: center;
}

.modal {
    width: 750rpx;
    height: 100%;
    position: fixed;
    top: 0;
    z-index: 1;
    background-color: rgba(0, 0, 0, 0.5);
}

.modal-list {
    width: 100%;
    position: absolute;
    bottom: 0;
    text-align: center;
    background-color: #fff;
    transition: all 0.2s;
}

.modal-list .bot {
    cursor: pointer;
    font-size: 30rpx;
    border-bottom: 1px solid #eee;
    line-height: 90rpx;
}

.modal-list .bot:first-child {
    cursor: default;
}

.modal-list .bot:last-child {
    border-bottom: none;
}
